<resources>

    <!-- Base application theme. -->
    <style name="Theme.Tx" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Tx.Toolbar</item>
    </style>

    <style name="Widget.Tx.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">12dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Tx.Logo</item>
    </style>

    <style name="Widget.Tx.CollapsingToolbar" parent="">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Tx.Logo</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">124dp</item>
        <item name="expandedTitleMarginTop">140dp</item>
        <item name="scrimVisibleHeightTrigger">140dp</item>
    </style>

    <style name="Widget.Tx.CollapsingToolbarContent" parent="">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextAppearance.Tx.Logo" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_gray_lightest</item>
    </style>


    <style name="PlainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- No colors defined here for default styling on AlertDialog buttons -->
    </style>

    <style name="ButtonLightBlueTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_blue_accent</item>
        <item name="colorControlHighlight">@color/primary_navy_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
