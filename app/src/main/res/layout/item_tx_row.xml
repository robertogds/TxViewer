<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="72dp"
    android:theme="@style/PlainTheme"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/primary_gray_dark"
                android:textSize="12sp"
                tools:ignore="MissingPrefix"
                tools:text="Timestamp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="8dp"
                    android:textColor="@color/primary_gray_light"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix"
                    tools:text="@string/sent" />

                <TextView
                    android:id="@+id/tx_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/product_green_medium"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix"
                    tools:text="0.00065 BTC" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tx_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.5"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textColor="@color/primary_gray_dark"
            android:visibility="gone"
            android:textSize="10sp"
            tools:ignore="MissingPrefix"
            tools:text="1M4gfd9q9iTCGRQLatoRzcJRETyTpJLCya" />

    </LinearLayout>
</android.support.v7.widget.CardView>